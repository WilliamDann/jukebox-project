<%- include('../base/top') %>

<h1 class="row justify-content-center">Update Account</h1>

<form method="post" action="/account/update" enctype="application/x-www-form-urlencoded">
    <div class="col-lg-6 offset-lg-3 ">

        <div class="form-group">
            <label for="id">Id: <%= account.id %></label>
            <input class="form-control" name="id" type="text" value="<%= account.id %>" readonly>    
        </div>
        
        <div class="form-group">
            <label for="displayName">Display Name: <%= account.displayName %></label>
            <input class="form-control" name="displayName" type="text"  value="<%= account.displayName %>">
        </div>
        
        <div class="form-group">
            <label for="email">Email: <%= account.email %></label>
            <input class="form-control" name="email" type="email" value="<%= account.email %>">
        </div>
        
        <div class="form-group row justify-content-center">
            <input class="btn btn-primary" type="submit" value="Update Account">
        </div>
        
    </div>
</form>

<div class="row justify-content-center">
    <a class="btn btn-primary" href="#">Update Password</a>
</div>


