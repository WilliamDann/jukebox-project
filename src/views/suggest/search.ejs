<div class="section">
    <h2>Suggest A Song</h2><br>
    <form id="myForm" > 
        <input name="suggestTo" type="hidden" readonly value="<%= suggestTo.id %>">
        <input class="search" name="search" type="text" placeholder="ðŸ”Ž Search a song..."><br>
        <button class="submit" type="submit">Search</button>
    </form>
</div>

<div class="results"></div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.getElementById('myForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            const search = document.querySelector('input[name="search"]').value.trim();
            const suggestTo = document.querySelector('input[name="suggestTo"]').value;
            const resultsDiv = document.querySelector('.results');

            if(!search){
                resultsDiv.innerHTML = "Please provide a search term.";
                return;
            }

            try{
                const res = await fetch(`/results?search=${encodeURIComponent(search)}&suggestTo=${suggestTo}`);
                const html = await res.text();
                document.querySelector('.results').innerHTML = html;
            } catch (err) {
                throw new AppError(err);
                resultsDiv.innerHTML = "An error occured while searching."
            }
        });       
    });
</script>

