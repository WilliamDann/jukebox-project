<%- include('../base/top') %>

<h1 class="row justify-content-center">Delete Profile</h1>

<h3 class="row justify-content-center text-danger">Are you sure you want to delete this profile?</h3>

<form method="post" action="/profile/delete" enctype="application/x-www-form-urlencoded">
    <div class="form-group text-center">
        <label for="displayName">Display Name</label><br>
        <input type="text" name="displayName" readonly value="<%= profile.displayName %>">
        <input type="hidden" name="profileId" value="<%= profile.id %>" readonly>
    </div>
    
    <div class="form-group text-center">
        <input class="btn btn-danger" type="submit" value="Delete"> 
    </div>
    
</form>

