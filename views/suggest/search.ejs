<%- include('../base/top') %>

<style>
    body div {
        display: grid;
        place-items: center;
    }

    form {
        width: 100%;
        display: grid;
        place-items: center;
    }

    form .search {
        padding: 10px;
        width: 50%;
        border-radius: 30px;
        border: 1px solid grey;
        height: 100%;
    }

    form .submit {
        background: black;
        border: 2px solid rgb(23, 23, 23);
        border-radius: 30px;
        color: white;
        padding: 8px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
    }

    .section {
        background-color: rgba(255, 255, 255, 0.8);
        padding: 25px;
        margin: 25px;
    }
</style>

<div class="section">
    <h1>Jukebox App - <%= suggestTo.displayname %></h1>
</div>

<div class="section">
    <h2>Suggest A Song</h2><br>
    <form action="/results" method="get">
        <input name="suggestTo" type="hidden" readonly value="<%= suggestTo.id %>">
        <input class="search" name="search" type="text" placeholder="ðŸ”Ž Search a song..."><br>
        <input class="submit" type="submit" value="Search">
    </form>
</div>

