<%- include('../base/top') %>

<h1 class="row justify-content-center">Sign In</h1>

<form class="form-signin" method="post" action="/auth" enctype="application/x-www-form-urlencoded">
    <div class="col-lg-4 offset-lg-4">
        <div class="form-group">
            <label for="email">Email</label>
            <input name="email" type="email" class="form-control" placeholder="Email"><br>
        </div>
    
        <div class="form-group">
            <label for="password">Password</label>
            <input name="password" type="password" class="form-control" placeholder="Password"><br>
        </div>
    
        <div class="form-group row justify-content-center">
            <input type="submit" value="Sign In" class="btn btn-primary">
        </div>
    </div>

</form>
<div class="row justify-content-center"> 
    <a href="/account/create" class="btn btn-primary">Create Account</a>
</div>

